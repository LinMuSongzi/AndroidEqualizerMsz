<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolumeRecordActivity">

    <com.bullhead.androidequalizer.drawable.PathTestView
        android:id="@+id/id_lineview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>




    <com.bullhead.androidequalizer.waveview.WaveLineView
        android:id="@+id/waveLineView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:wlvLineColor="#DEFFFFFF"
        app:wlvMoveSpeed="400"
        app:wlvSamplingSize="300"
        app:wlvSensibility="10" />


</RelativeLayout>